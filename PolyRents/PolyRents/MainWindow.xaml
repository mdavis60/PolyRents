<Window x:Class="PolyRents.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PolyRents"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded">
    <Window.Resources>
        <local:ComputingResourcesDataSet x:Key="computingResourcesDataSet"/>
        <CollectionViewSource x:Key="resourcesViewSource" Source="{Binding Resources, Source={StaticResource computingResourcesDataSet}}"/>
    </Window.Resources>
    <Grid DataContext="{StaticResource resourcesViewSource}">
        <StatusBar x:Name="statusBar" VerticalAlignment="Bottom" MinHeight="15" HorizontalContentAlignment="Right" VerticalContentAlignment="Bottom">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="150" />
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>
            <StatusBarItem Grid.Column="1"/>
            <Separator Grid.Column="1" Width="1" />
            <Separator Grid.Column="3" />
            <StatusBarItem Grid.Column="4" HorizontalAlignment="Left" VerticalAlignment="Bottom">
                <TextBlock Text="status: " FontSize="10"/>
            </StatusBarItem>
            <StatusBarItem Grid.Column="4" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                <TextBlock x:Name="status" Text="hello World" FontSize="10" Width="110"/>
            </StatusBarItem>
        </StatusBar>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="194,39,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <DataGrid x:Name="resourcesDataGrid" AutoGenerateColumns="False" EnableRowVirtualization="True" ItemsSource="{Binding}" Margin="10,95,107,24" RowDetailsVisibilityMode="VisibleWhenSelected">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="idResourceColumn" Binding="{Binding idResource}" Header="id Resource" Width="SizeToHeader"/>
                <DataGridTextColumn x:Name="statusColumn" Binding="{Binding status}" Header="status" Width="SizeToHeader"/>
                <DataGridTextColumn x:Name="status_descriptionColumn" Binding="{Binding status description}" Header="status description" Width="SizeToHeader"/>
                <DataGridTextColumn x:Name="idResourceTypeColumn" Binding="{Binding idResourceType}" Header="id Resource Type" Width="SizeToHeader"/>
            </DataGrid.Columns>
        </DataGrid>


    </Grid>
</Window>
